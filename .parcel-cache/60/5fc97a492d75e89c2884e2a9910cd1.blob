html,
body {
  touch-action: none;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

#addVertex {
  position: fixed;
  left: 0px;
  top: 0px;
  width: 45%;
  height: 10%;
  border-radius: 0px 0px 0px 0px;
  border-color: black;
}
#removeVertex {
  position: fixed;
  left: 45%;
  top: 0px;
  width: 45%;
  height: 10%;
  border-radius: 0px 0px 0px 0px;
  border-color: black;
}
#code {
  position: fixed;
  top: 20%;
  text-align: center;
  font-family: "Courier New";
}

#generateMany {
  position: fixed;
  left: 90%;
  top: 0px;
  width: 10%;
  background-color: red;
  border-radius: 0px 0px 0px 0px;
  border-color: black;
  height: 10%;
  font-size: 20px;
  color: white;
  text-align: center;
}
::placeholder {
  color: white;
  opacity: 0.5;
}

#myCavas {
  position: fixed;
  top: 0px;
  left: 0px;
  height: 95%;
  width: 100%;
}
